{
  // Change this to match your project
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "compilerOptions": {
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
      "WebWorker",
      "ESNext.AsyncIterable"
    ],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "es2022",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "esNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler"
  }
}
