{
  "name": "@ekwoka/rust-ts",
  "version": "0.0.5",
  "description": "Simple TS implementations of some Rust structures",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json",
    "./upgrade": {
      "import": "./dist/upgrade/index.js",
      "types": "./dist/upgrade/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "coverage": "vitest run --coverage",
    "lint": "eslint --fix ./src ./test; prettier --write ./src ./test --experimental-ternaries",
    "lint:check": "eslint --max-warnings 10 ./src && prettier --check ./src",
    "prebuild": "rm -rf dist",
    "prepare": "husky install",
    "size": "node scripts/esbuild.js",
    "test": "vitest",
    "sandbox": "vite ./sandbox --open --force"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/node": "20.10.4",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "@vitest/coverage-c8": "0.32.2",
    "esbuild": "0.19.9",
    "eslint": "8.55.0",
    "eslint-plugin-filename-export": "1.0.4",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "prettier": "3.1.1",
    "pretty-bytes": "6.1.1",
    "typescript": "5.3.3",
    "vite": "5.0.7",
    "vitest": "1.0.4"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "node:.*",
      "@/lib(.*)$",
      "@/utils(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write --experimental-ternaries"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "typescript@<5.2.2": "^5.2.2",
      "semver@<7.5.2": ">=7.5.2"
    }
  },
  "dependencies": {
    "vite-tsconfig-paths": "^4.2.2"
  }
}
