{
  "name": "@ekwoka/rust-ts",
  "version": "0.4.0",
  "description": "Simple TS implementations of some Rust structures",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json",
    "./upgrade": {
      "import": "./dist/upgrade/index.js",
      "types": "./dist/upgrade/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "coverage": "vitest run --coverage",
    "lint": "eslint --fix ./src ./test; prettier --write ./src ./test --experimental-ternaries",
    "lint:check": "eslint --max-warnings 10 ./src && prettier --check ./src --experimental-ternaries",
    "prebuild": "rm -rf dist",
    "prepare": "husky install",
    "size": "node scripts/esbuild.js",
    "test": "vitest",
    "sandbox": "vite ./sandbox --open --force"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/node": "20.12.12",
    "@typescript-eslint/eslint-plugin": "6.18.0",
    "@typescript-eslint/parser": "6.18.0",
    "@vitest/coverage-c8": "0.32.2",
    "esbuild": "0.21.4",
    "eslint": "8.56.0",
    "eslint-plugin-filename-export": "1.0.4",
    "husky": "9.0.11",
    "lint-staged": "15.2.5",
    "prettier": "3.2.5",
    "pretty-bytes": "6.1.1",
    "typescript": "5.4.5",
    "vite": "5.2.11",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.6.0"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "node:.*",
      "@/lib(.*)$",
      "@/utils(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write --experimental-ternaries"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "typescript": "$typescript",
      "esbuild": "$esbuild"
    }
  }
}
